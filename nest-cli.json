{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/rosetech-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts"
          ],
          "controllerFileNameSuffix": ".controller.ts",
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoKeyOfComment": "description",
          "controllerKeyOfComment": "description"
        }
      }
    ],
    "assets": [
    ],
    "webpack": true,
    "tsConfigPath": "apps/rosetech-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/rosetech-gateway",
  "projects": {
    "rosetech-gateway": {
      "type": "application",
      "root": "apps/rosetech-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/rosetech-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/rosetech-gateway/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "microservice",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    }
  }
}